#Print even and odd numbers(1,101)
even_li=[]
odd_li=[]
for i in range(1,101):   #1to100
    if i%2==0:
        even_li.append(i)
    else:
        #print(i,"is odd")
        odd_li.append(i)
        print("even numbers are:",even_li)
        print("odd numbers are:",odd_li)    

